<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="#11111111"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#fff0f0f0"
        android:fadingEdge="none"
        android:orientation="vertical">

        <include layout="@layout/divide_15_top_bottom" />

        <RelativeLayout
            android:id="@+id/photo_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff9f9f9">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="96dp"
                android:background="@drawable/common_item_click_selector"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/me_photo"
                android:textSize="16sp" />


            <ImageView
                android:id="@+id/photo_imageView"
                android:src="@drawable/user_photo"
                android:layout_alignParentRight="true"
                android:layout_margin="8dp"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

        </RelativeLayout>

        <include layout="@layout/divide_15_top_bottom" />


        <RelativeLayout
            android:id="@+id/phone_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff9f9f9">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:background="@drawable/common_item_click_selector"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/me_phone"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/phone_number_txt"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:text="10"
                android:textColor="@color/gray_b2"
                android:textSize="16sp" />

        </RelativeLayout>

        <include layout="@layout/divide_1_12" />

        <RelativeLayout
            android:id="@+id/name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff9f9f9">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:background="@drawable/common_item_click_selector"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/me_name"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/username_txt"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:text="10"
                android:textColor="@color/gray_b2"
                android:textSize="16sp" />

        </RelativeLayout>

        <include layout="@layout/divide_1_12" />

        <RelativeLayout
            android:id="@+id/sex_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff9f9f9">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:background="@drawable/common_item_click_selector"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/me_sex"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/sex_txt"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:gravity="center"
                android:text="10"
                android:textColor="@color/gray_b2"
                android:textSize="16sp" />

        </RelativeLayout>


        <include layout="@layout/divide_15_top_bottom" />

        <RelativeLayout
            android:id="@+id/logout_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff9f9f9">

            <TextView
                android:id="@+id/login_logout_txt"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:background="@drawable/common_item_click_selector"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/me_logout"
                android:textSize="16sp" />


        </RelativeLayout>

    </LinearLayout>

</ScrollView>